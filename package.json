{
  "private": true,
  "name": "@marcus-rise/react-theme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "storybook": "yarn workspace docs storybook",
    "theme:dev": "yarn workspace @marcus-rise/react-theme dev",
    "start": "npm-run-all --parallel storybook theme:dev",
    "build": "yarn workspace @marcus-rise/react-theme build && yarn workspace docs build-storybook"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
