{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
